password = {{ nova_conf.placement_password }}

[privsep]
[profiler]
[profiler_jaeger]
[profiler_otlp]
[quota]
[remote_debug]
[scheduler]
discover_hosts_in_cells_interval = 300

[serial_console]
[service_user]
send_service_user_token = true
auth_url = https://{{ nova_conf.keystone_hostname }}/identity
auth_strategy = keystone
auth_type = password
project_domain_name = Default
